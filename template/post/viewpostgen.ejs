<!DOCTYPE html>
<html lang="th">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= post.title %> - SDhire
    </title>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/post/css/Template_HF.css">
    <link rel="stylesheet" href="/post/css/post_gen.css">
</head>

<body>

    <header>
        <a href="/" style="text-decoration: none; color: inherit;">
            <h2>SDhire</h2>
        </a>
        <div class="profile_container">
            <div class="buttom_header">
                <button type="button" class="profile_button" onclick="toggleDropdown()">
                    <div class="photo_profile">
                        <% if(userdata.profile_image){ %>
                            <img src="/imageForTest/<%= userdata.profile_image %>" alt="<%= userdata.profile_image%>">
                            <% } else{%>
                                <img src="https://ui-avatars.com/api/?name=<%= userdata.username || 'User' %>"
                                    alt="โปรไฟล์">
                                <% }%>
                    </div>
                    <span>Profile</span>
                </button>
            </div>
            <div class="data_box" id="myDropdown">
                <div class="user_infor">
                    <% if(userdata.profile_image){ %>
                        <img src="/imageForTest/<%= userdata.profile_image %>" alt="<%= userdata.profile_image%>">
                        <% } else{%>
                            <img src="https://ui-avatars.com/api/?name=<%= userdata.username || 'User' %>"
                                alt="โปรไฟล์">
                            <% }%>
                                <div class="user_name">
                                    <%if(userdata.roles=="student"){%>
                                        <h1>
                                            <%=userdata.firstname%>
                                                <%=userdata.lastname%>
                                        </h1>
                                        <%}else{%>
                                            <h1>
                                                <%=userdata.username%>
                                            </h1>
                                            <%}%>
                                                <span class="status-dot"></span>สถานะ : <%= userdata.roles %>
                                </div>
                </div>

                <div class="button_VO">
                    <%if(userdata.roles=="student"){%>
                        <a href="/home/profilestudent/<%=userdata.ID%>">
                            <button class="b_view">ดูโปรไฟล์</button>
                        </a>
                        <%}else{%>
                            <a href="/home/profilegeneral/<%=userdata.ID%>">
                                <button class="b_view">ดูโปรไฟล์</button>
                            </a>
                            <%}%>
                                <a>
                                    <form action="/logout" method="post">
                                        <button class="b_logout">ออกจากระบบ</button>
                                    </form>
                                </a>
                </div>
            </div>
        </div>
    </header>

    <main class="container">
        <div class="page-wrapper">
            <!-- 1. Profile Header Card -->
            <section class="profile-header-card">
                <div class="header-main-info">
                    <div class="company-logo">
                        <% if(post.profile_image){ %>
                            <img src="/imageForTest/<%= post.profile_image %>" alt="<%= post.profile_image%>">
                            <% } else{%>
                                <img src="https://ui-avatars.com/api/?name=<%= post.username || 'User' %>"
                                    alt="โปรไฟล์">
                                <% }%>
                    </div>
                    <div class="user-details">
                        <h1>
                            <% if(post.firstname) { %>
                                <%=post.firstname%>
                                    <%=post.lastname%>
                                        <% } else { %>
                                            <%=post.username%>
                                                <% } %>
                        </h1>
                        <p style="color: #64748b; margin-top: 5px;">✅ สถานะ : <%=post.roles%>
                        </p>
                    </div>
                </div>

                <div class="header-actions">
                    <a href="/home/profilegeneral/<%=post.ID%>" class="btn-view-profile">ดูโปรไฟล์</a>
                </div>
            </section>

            <div class="profile-content-grid">
                <!-- 2. Left Content (Job Info) -->
                <div class="content-left">
                    <article class="info-section">
                        <h3>รายละเอียดงาน</h3>
                        <div class="job-list">
                            <div class="job-item">
                                <div class="job-info" style="width: 100%;">
                                    <h1 class="job-link">
                                        <%=post.title%>
                                    </h1>
                                    <span>ประเภทงาน : <%=post.orderType%></span><br>
                                    <div
                                        style="margin-top: 15px; white-space: pre-wrap; color: #333; line-height: 1.6;">
                                        <%=post.des_cript%>
                                    </div>
                                    <p class="job-meta">โพสต์เมื่อ: <%= new
                                            Date(post.post_date).toLocaleDateString('th-TH') %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </article>
                </div>

                <!-- 3. Right Content (Stats & Comments) -->
                <aside class="content-right">
                    <div class="stats-card">
                        <h3>ข้อมูลการจ้างงาน</h3>

                        <div class="stats-item">
                            <span>กำหนดส่ง</span>
                            <strong>
                                <%= post.deadline ? new Date(post.deadline).toLocaleDateString('th-TH') : "-" %>
                            </strong>
                        </div>
                        <div class="stats-item">
                            <span>งบประมาณ</span>
                            <strong class="text-green">฿<%= Number(post.budjet).toLocaleString() %></strong>
                        </div>

                        <hr style="margin: 20px 0; border: 0; border-top: 1px solid #eee;">

                        <!-- Comments Section inside Stats Card -->
                        <div class="comment-header-row">
                            <h3>ความคิดเห็น</h3>
                            <span style="font-size: 12px; color: #666;">
                                <%= comments ? comments.length : 0 %> ข้อความ
                            </span>
                        </div>

                        <div class="scrollable-list" id="commentContainer">
                            <% if(comments && comments.length> 0) { %>
                                <% comments.forEach(function(comment) { %>
                                    <div class="comment-item">
                                        <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 5px;">
                                            <div
                                                style="width: 30px; height: 30px; border-radius: 50%; overflow: hidden;">
                                                <% if(comment.profile_image){ %>
                                                    <img src="/imageForTest/<%= comment.profile_image %>"
                                                        style="width: 100%; height: 100%; object-fit: cover;">
                                                    <% } else { %>
                                                        <img src="https://ui-avatars.com/api/?name=<%= comment.username || 'User' %>"
                                                            style="width: 100%; height: 100%; object-fit: cover;">
                                                        <% } %>
                                            </div>
                                            <div>
                                                <h4 style="font-size: 14px; margin: 0;">
                                                    <% if(comment.roles==='student' && comment.firstname) { %>
                                                        <%= comment.firstname %>
                                                            <% } else { %>
                                                                <%= comment.username %>
                                                                    <% } %>
                                                </h4>
                                                <span style="font-size: 10px; color: #999;">
                                                    <%= new Date(comment.created_at).toLocaleString('th-TH') %>
                                                </span>
                                            </div>
                                        </div>
                                        <p style="font-size: 13px; margin: 0;">
                                            <%= comment.comment_text %>
                                        </p>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <div
                                                style="text-align: center; color: #999; padding: 20px; font-size: 13px;">
                                                ยังไม่มีความคิดเห็น
                                            </div>
                                            <% } %>
                        </div>

                        <%if(userdata.ID!=post.general_id||post.roles!="general"){%>
                            <div class="comment-action">
                                <button class="btn-comment" onclick="openCommentModal()">
                                    ✍️ แสดงความคิดเห็น...
                                </button>
                            </div>
                            <%}%>
                    </div>
                </aside>
            </div>
        </div>
    </main>

    <!-- Comment Modal -->
    <div id="commentModal" class="modal-overlay">
        <div class="modal-window mini-modal">
            <div class="modal-header">
                <h3>เขียนความคิดเห็น</h3>
                <span class="close-modal" onclick="closeCommentModal()">&times;</span>
            </div>
            <div class="modal-body">
                <form action="/home/general/comment" method="POST">
                    <input type="hidden" name="order_id" value="<%= post.order_ID %>">
                    <textarea id="commentText" name="comment_text" placeholder="พิมพ์ข้อความของคุณ..." rows="4"
                        required></textarea>
                    <button type="submit" class="btn-send">ส่งข้อความ</button>
                </form>
            </div>
        </div>
    </div>

    <footer>
        <div class="footer-contact">
            <p>ติดต่อเรา</p>
            <p>sdhire67@gmail.com</p>
        </div>
        <div class="footer-bottom">
            <p>© 2025 SDhire, All right reserved</p>
        </div>
    </footer>

    <script>
        function toggleDropdown() {
            var dropdown = document.getElementById("myDropdown");
            dropdown.style.display = dropdown.style.display === "block" ? "none" : "block";
        }

        // Modal Logic
        function openCommentModal() {
            document.getElementById('commentModal').style.display = 'flex';
        }

        function closeCommentModal() {
            document.getElementById('commentModal').style.display = 'none';
        }

        // Close modal when clicking outside
        window.onclick = function (event) {
            var modal = document.getElementById('commentModal');
            if (event.target == modal) {
                closeCommentModal();
            }
        }
    </script>
</body>

</html>